			<!--  informazioni del destinatario -->
			<div type="destination">
				<ab type="receiver" hand="#h4">
					<address>	
						<lb copyOf="LL1.1_lb_1fr_001" n="1" facs="#LL1.1_line_1fronte_recto_1"/>
						<addrLine>
							<choice><abbr>S. E. </abbr><expan resp="#GS">S<ex>ua </ex> E<ex>ccellenza</ex></expan></choice>
